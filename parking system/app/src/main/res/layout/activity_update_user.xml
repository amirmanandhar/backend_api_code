<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.adminactivities.UpdateUserActivity">

    <TextView
        android:padding="20dp"
        android:text="Update User Type"
        android:background="#eee"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/updatesUserId"
        android:hint="User's id"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="User's type"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/updatesUserType"
        android:padding="30dp"
        android:background="#ddd"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnCancelUpdate"
            android:text="Cancel"
            android:background="#e26a6a"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnUpdateUserType"
            android:text="Update"
            android:layout_alignParentRight="true"
            android:background="#a2ded0"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messageViewUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Message"
            android:textColor="#fff"
            android:textSize="18dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    
</LinearLayout>